import random

def game():
    target_number = random.randint(1, 1000)
    number_of_tries = 0
    max_tries = 10

    print("ğŸ® Welcome to the Number Guessing Game!")
    print("I have selected a number between 1 and 1000.")
    print(f"You have {max_tries} tries to guess it.\n")

    while number_of_tries < max_tries:
        try:
            guess = int(input(f"Attempt {number_of_tries + 1}: Enter your guess: "))
            number_of_tries += 1

            if guess < target_number:
                print("Too low! Try again.\n")
            elif guess > target_number:
                print("Too high! Try again.\n")
            else:
                print(f"ğŸ‰ Congratulations! You guessed the number in {number_of_tries} tries.")
                break
        except ValueError:
            print("âš ï¸ Please enter a valid number.\n")

    if guess != target_number:
        print(f"ğŸ˜¢ Sorry! You've used all {max_tries} tries. The number was {target_number}.")

# Run the game
game()
